<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyCYXyVuRA57ak78Xc9mncpylfFA1J9gVYM&sensor=false" %>

<%= form_for @quest, html: { role: "form", class: "form-horizontal"} do |f| %>

	<% if @quest.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@quest.errors.count, "error") %> prohibited this user from being saved:</h2>
		
			<ul>
				<% @quest.errors.full_messages.each do |msg| %>
					<li>
						<%= msg %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<br />
	<div class="form-group">
		<%= f.label :name, class: "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= f.text_field :name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :hint, class: "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= f.text_field :hint, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :difficulty, class: "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= f.radio_button :difficulty, "1" %>
			<%= f.label :difficulty, "1", value: "1" %>
			<%= f.radio_button :difficulty, "2" %>
			<%= f.label :difficulty, "2", value: "2" %>
			<%= f.radio_button :difficulty, "3" %>
			<%= f.label :difficulty, "3", value: "3" %>
			<%= f.radio_button :difficulty, "4" %>
			<%= f.label :difficulty, "4", value: "4" %>
			<%= f.radio_button :difficulty, "5" %>
			<%= f.label :difficulty, "5", value: "5" %>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-md-10 col-md-offset-2">
			<p class="text-info">Click the map to set latitude and longitude</p>
			<div id="map-canvas"></div>
		</div>
	</div>
	
	<div class="form-group">
		<%= f.label :latitude, class: "col-md-2 control-label" %>
		<div class="col-md-4">
			<%= f.text_field :latitude, class: "form-control" %>
		</div>
		<%= f.label :longitude, class: "col-md-2 control-label" %>
		<div class="col-md-4">
			<%= f.text_field :longitude, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :brief, class: "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= f.text_area :brief, rows: 3, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :place_name, class: "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= f.text_field :place_name, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :phone, class: "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= f.text_field :phone, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :fun_facts, class: "col-md-2 control-label" %>
		<div class="col-md-10">
			<%= f.text_area :fun_facts, rows: 3, class: "form-control" %>
		</div>
	</div>
	
	<% unless @quest.id.nil? %>
		<div class="page-header text-center">
			<h2>Images</h2>
		</div>
		<%= f.fields_for :images do |builder| %>
			<%= render "images_fields", f: builder %>
		<% end %>
	<% end %>

	<div class="actions">	
		<%= f.submit class: "btn btn-success" %>
	</div>
	
<% end %>
