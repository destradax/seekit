<div class="container">
	<% if notice %>
		<div class="alert alert-success">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">
				&times;
			</button>
			<%= notice %>
		</div>
	<% end -%>

	<% if flash[:error] %>
		<div class="alert alert-danger">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">
				&times;
			</button>
			<%= flash[:error] %>
		</div>
	<% end -%>


	<div class="page-header text-center">
		<h1><%= @quest.name %></h1>
	</div>

	<% if @quest.images.count == 0 %>
		<%= image_tag "default_pic.png", class: "img-thumbnail img-responsive" %>
	<% else %>
		<% @quest.images.each do |image| %>
			<img src="<%= image.url %>" class="img-thumbnail"/>
		<% end %>
	<% end %>

	<%= render partial: 'form'%>

	<br />
	<%= link_to 'Delete Quest', @quest, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
	<br />
	<br />
	<%= link_to '<< Back', quests_path, class: "btn btn-primary" %>
</div>

