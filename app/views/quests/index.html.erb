<div class="panel panel-primary">
  <div class="panel-heading text-center">
	<span class="h1">Quests</span>
  </div>

  <table class="table table-striped table-hover">
	<thead>
	  <tr>
		<th>Name</th>
		<th>Hint</th>
		<th>Difficulty</th>
		<th>Latitude</th>
		<th>Longitude</th>
	  </tr>
	</thead>
	<tbody>
	  <% @quests.each do |quest| %>
	  <tr data-link="<%= quest_path(quest) %>">
		<td><%= quest.name %></td>
		<td><%= quest.hint %></td>
		<td><%= quest.difficulty %></td>
		<td><%= quest.latitude %></td>
		<td><%= quest.longitude %></td>
	  </tr>
	  <% end %>
	</tbody>
  </table>
</div>

<%= link_to "New Quest", new_quest_path, class: "btn btn-primary" %>