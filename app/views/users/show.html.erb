<div class="container">
	<% if notice %>
		<div class="alert alert-success">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">
				&times;
			</button>
			<%= notice %>
		</div>
	<% end -%>
	
	<% if flash[:error] %>
		<div class="alert alert-danger">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">
				&times;
			</button>
			<%= flash[:error] %>
		</div>
	<% end -%>


	<div class="row">
		<div class="col-md-6">
			<div id="profile-pic">
				<%= user_profile_pic(@user) %>
			</div>
		</div>
		<div class="col-md-6">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<span class="h2"><%= @user.name %></span>
				</div>
				<div class="panel-body">
					<%= render partial: 'form'%>
				</div>
			</div>
			<div class="actions">
				<%= link_to 'Delete User', @user, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
			</div>
		</div>
	</div>

	<% if @user.friends.any? %>
		<br />
		<br />
		<div class="panel panel-primary">
			<div class="panel-heading text-center">
				<span class="h2"><%= @user.name %>'s Friends</span>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Name</th>
							<th>Email</th>
							<th>Experience</th>
						</tr>
					</thead>
					<tbody>
						<% @user.friends.each do |friend| %>
							<tr data-link="<%= user_path(friend) %>">
								<td><%= friend.name %></td>
								<td><%= friend.email %></td>
								<td><%= friend.exp %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	<% end %>

	<br />
	<br />
	<%= link_to '<< Back', users_path, class: "btn btn-primary" %>
</div>
